<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.unieats.controllers.FoodDetailsController"
      style="-fx-background-color: #fafafa;" prefWidth="360" prefHeight="800" maxWidth="360" maxHeight="800" spacing="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #ffffff; -fx-padding: 16; -fx-border-color: #f0f0f0; -fx-border-width: 0 0 1 0;">
        <Button fx:id="backButton" style="-fx-background-color: transparent; -fx-padding: 8;">
            <graphic>
                <FontIcon iconLiteral="fas-arrow-left" iconSize="20" iconColor="#2d3436"/>
            </graphic>
        </Button>
        <Label fx:id="titleLabel" text="Food Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-padding: 0 0 0 16;"/>
    </HBox>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox spacing="16" style="-fx-padding: 20;">
            <!-- Image / placeholder -->
            <StackPane style="-fx-background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); -fx-background-radius: 12; -fx-pref-height: 180; -fx-pref-width: 320;" alignment="CENTER">
                <ImageView fx:id="imageView" fitWidth="320" fitHeight="180" preserveRatio="true"/>
                <FontIcon fx:id="placeholderIcon" iconLiteral="fas-utensils" iconSize="48" iconColor="#ff6b35"/>
            </StackPane>

            <!-- Details -->
            <VBox spacing="8">
                <Label fx:id="nameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>
                <Label fx:id="shopLabel" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>

                <HBox spacing="16">
                    <Label fx:id="priceLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ff6b35;"/>
                    <Label fx:id="discountLabel" style="-fx-font-size: 12px; -fx-text-fill: #e74c3c;"/>
                    <Label fx:id="pointsLabel" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                    <Label fx:id="stockLabel" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </HBox>

                <Label text="Description" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-padding: 12 0 0 0;"/>
                <Label fx:id="descriptionLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #2d3436;"/>
            </VBox>

            <!-- Actions -->
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="addToCartButton" text="Add to Cart"
                        style="-fx-background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 12; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>
