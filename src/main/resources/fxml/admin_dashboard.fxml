<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.unieats.controllers.AdminDashboardController" spacing="10" fillWidth="true" stylesheets="@../css/styles.css">
    <!-- KPI cards laid out 2 per row -->
    <GridPane hgap="8" vgap="8" styleClass="kpi-grid">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>

        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" fillWidth="true" spacing="4" styleClass="kpi-card kpi-orange" prefHeight="84" style="-fx-background-color: #FFF3E0; -fx-border-color: #F59E0B; -fx-border-width: 1; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 16;">
            <Label text="Total Users" />
            <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" fillWidth="true" spacing="4" styleClass="kpi-card kpi-orange" prefHeight="84" style="-fx-background-color: #FFF3E0; -fx-border-color: #F59E0B; -fx-border-width: 1; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 16;">
            <Label text="Active Shops" />
            <Label fx:id="activeSellersLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        </VBox>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" fillWidth="true" spacing="4" styleClass="kpi-card kpi-orange" prefHeight="84" style="-fx-background-color: #FFF3E0; -fx-border-color: #F59E0B; -fx-border-width: 1; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 16;">
            <Label text="Total Reports" />
            <Label fx:id="pendingSellersLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" fillWidth="true" spacing="4" styleClass="kpi-card kpi-orange" prefHeight="84" style="-fx-background-color: #FFF3E0; -fx-border-color: #F59E0B; -fx-border-width: 1; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 16;">
            <Label text="Total Payments" />
            <Label fx:id="pendingReportsLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        </VBox>
    </GridPane>

    <!-- Reports Distribution Pie Chart -->
    <VBox spacing="6">
        <Label text="Reports Distribution" />
        <PieChart fx:id="complaintsPieChart" prefHeight="240" />
    </VBox>

    <!-- Growth chart for Users & Orders -->
    <VBox spacing="6">
        <Label text="User &amp; Order Growth Over Time" />
        <LineChart fx:id="growthChart" prefHeight="260">
            <xAxis>
                <CategoryAxis label="Time" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Count" />
            </yAxis>
        </LineChart>
    </VBox>
</VBox>


