<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.unieats.controllers.CheckoutController"
            prefWidth="360" prefHeight="800" style="-fx-background-color: #f8f9fa;">

    <!-- Top header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-padding: 16; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0;">
            <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-padding: 8;">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="18" iconColor="#6c757d"/>
                </graphic>
            </Button>
            <Label text="Checkout" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="16" style="-fx-padding: 16;">
                
                <!-- Order Summary -->
                <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <Label text="Order Summary" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>
                    
                    <ListView fx:id="orderItemsList" style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                    
                    <Separator/>
                    
                    <VBox spacing="8">
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Subtotal" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="subtotalLabel" style="-fx-font-size: 14px; -fx-text-fill: #2d3436;"/>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Tax (2%)" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="taxLabel" style="-fx-font-size: 14px; -fx-text-fill: #2d3436;"/>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Total" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="totalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ff6b35;"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Delivery Information -->
                <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <Label text="Delivery Information" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>
                    
                    <VBox spacing="8">
                        <Label text="Name" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
                        <TextField fx:id="nameField" promptText="Enter your full name" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"/>
                        
                        <Label text="Phone" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
                        <TextField fx:id="phoneField" promptText="Enter your phone number" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"/>
                        
                        <Label text="Delivery Address" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
                        <TextArea fx:id="addressField" promptText="Enter your delivery address" prefRowCount="3" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"/>
                    </VBox>
                </VBox>


                <!-- Special Instructions -->
                <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <Label text="Special Instructions (Optional)" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>
                    <TextArea fx:id="instructionsField" promptText="Any special instructions for your order?" prefRowCount="2" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"/>
                </VBox>

                <!-- Payment Button -->
                <Button fx:id="proceedToPaymentButton" text="Proceed to payment" onAction="#handleProceedToPayment"
                        style="-fx-background-color: #ff6b35; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 12; -fx-padding: 12; -fx-cursor: hand; -fx-max-width: 200;"/>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom action buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="0" style="-fx-background-color: #ffffff; -fx-padding: 12 0; -fx-border-color: #f0f0f0; -fx-border-width: 1 0 0 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, -2);">
            <!-- Home -->
            <VBox fx:id="navHome" alignment="CENTER" spacing="4" style="-fx-cursor: hand; -fx-pref-width: 72;">
                <StackPane style="-fx-background-radius: 12; -fx-padding: 8;">
                    <FontIcon iconLiteral="fas-home" iconSize="20" iconColor="#6c757d"/>
                </StackPane>
                <Label text="Home" style="-fx-font-size: 10px; -fx-text-fill: #6c757d;"/>
            </VBox>
            <!-- Orders -->
            <VBox fx:id="navOrders" alignment="CENTER" spacing="4" style="-fx-cursor: hand; -fx-pref-width: 72;">
                <StackPane style="-fx-background-radius: 12; -fx-padding: 8;">
                    <FontIcon iconLiteral="fas-list-alt" iconSize="20" iconColor="#6c757d"/>
                </StackPane>
                <Label text="My Orders" style="-fx-font-size: 10px; -fx-text-fill: #6c757d;"/>
            </VBox>
            <!-- Cart -->
            <VBox fx:id="navCart" alignment="CENTER" spacing="4" style="-fx-cursor: hand; -fx-pref-width: 72;">
                <StackPane style="-fx-background-radius: 12; -fx-padding: 8;">
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="20" iconColor="#6c757d"/>
                </StackPane>
                <Label text="Cart" style="-fx-font-size: 10px; -fx-text-fill: #6c757d;"/>
            </VBox>
            <!-- Favourite -->
            <VBox fx:id="navFav" alignment="CENTER" spacing="4" style="-fx-cursor: hand; -fx-pref-width: 72;">
                <StackPane style="-fx-background-radius: 12; -fx-padding: 8;">
                    <FontIcon iconLiteral="fas-heart" iconSize="20" iconColor="#6c757d"/>
                </StackPane>
                <Label text="Favourite" style="-fx-font-size: 10px; -fx-text-fill: #6c757d;"/>
            </VBox>
            <!-- Profile -->
            <VBox fx:id="navProfile" alignment="CENTER" spacing="4" style="-fx-cursor: hand; -fx-pref-width: 72;">
                <StackPane style="-fx-background-radius: 12; -fx-padding: 8;">
                    <FontIcon iconLiteral="fas-user" iconSize="20" iconColor="#6c757d"/>
                </StackPane>
                <Label text="Profile" style="-fx-font-size: 10px; -fx-text-fill: #6c757d;"/>
            </VBox>
        </HBox>
    </bottom>

</BorderPane>
