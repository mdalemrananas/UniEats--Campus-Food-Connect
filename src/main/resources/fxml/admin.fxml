<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.fxml.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.unieats.controllers.AdminController">
	<children>
		<BorderPane prefWidth="360" prefHeight="800" minWidth="320" minHeight="560" style="-fx-background-color: #ffffff;">
			<top>
				<HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 12; -fx-background-color: #f7f7f7; -fx-border-color: #e6e6e6; -fx-border-width: 0 0 1 0;">
					<Button onAction="#toggleDrawer" style="-fx-background-color: transparent; -fx-cursor: hand;">
						<graphic>
							<FontIcon iconLiteral="fas-bars" iconSize="18" iconColor="#4B5563" />
						</graphic>
					</Button>
					<Label text="Dashboard" style="-fx-font-size: 18; -fx-font-weight: bold;" />
					<Region HBox.hgrow="ALWAYS" />
					<Label fx:id="sessionLabel" text="Session: 00:00" />
					<Button text="Logout" onAction="#handleLogout" />
				</HBox>
			</top>
			<center>
				<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;">
					<content>
						<StackPane fx:id="contentStack" style="-fx-padding: 12;" />
					</content>
				</ScrollPane>
			</center>
		</BorderPane>

		<!-- Drawer overlay -->
		<AnchorPane fx:id="drawerContainer" visible="false" managed="false" pickOnBounds="true">
			<HBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
				<StackPane onMouseClicked="#closeDrawer" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(0,0,0,0.35);" />
				<VBox spacing="10" prefWidth="220" minWidth="180" style="-fx-background-color: #ffffff; -fx-padding: 16; -fx-border-color: #e6e6e6; -fx-border-width: 0 0 0 1;">
					<Label text="Navigation" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 0 0 8 0;" />
					<Button text="Dashboard" onAction="#showDashboard" />
					<Button text="Manage Users" onAction="#showUsers" />
					<Button text="Manage Sellers" onAction="#showSellers" />
					<Button text="Reports" onAction="#showReports" />
					<Button text="Payments" onAction="#showPayments" />
					<Button text="Settings" onAction="#showSettings" />
					<Region VBox.vgrow="ALWAYS" />
					<Button text="Logout" onAction="#handleLogout" />
				</VBox>
			</HBox>
		</AnchorPane>
	</children>
</StackPane>

